<!--        app:layout_constraintTop_toTopOf="@id/cardView3"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/cardView3"-->
<!--        />-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="30dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/recy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/teal_200"
                android:text="See your visited locations"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ifYouAre"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/ifYouAre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you are positive"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView6"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            />

    <Button
        android:id="@+id/posto"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/teal_200"
        android:text="Report Positive"
        android:textSize="15sp"
        android:elevation="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ifYouAre"
        />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/posto"
        android:layout_marginTop="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>